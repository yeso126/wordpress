@import "normalize.styl"

gris= 			#262626
gris_claro= 	#C5C5D3
gris_oscuro=  	#424243
naranja =  		#FF3300
body
	background black
	color white 
	font-size 16px
a
	color gris_claro
	text-decoration none
a:visited 
	color gris_claro
a:hover
	transition .3s 
	color naranja

.header
	color gris_claro
	background gris
	padding 1em 10%
	text-align center 
.loop
	display flex
	flex-direction column
	padding 2em 30%
.article
	padding 0em 0em 2em 0em
	margin 0em 0em 2em 0em
	background gris_oscuro
	color gris_claro
	.article_title
		background gris
		color white
		height 5em
		font-size 1.2em 
		text-align center
		line-height 5em 
		h3
			margin 0 
	.article_content
		padding 2em
		img
			height auto 

.footer
	text-align center 
	background gris 
	
.footer-single
	text-align center
	font-size .8em 
	background gris 